<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="SysOut" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{HH:mm:ss}] [%level]: %msg{nolookups}%n"/>
        </Console>
        <Sentry name="Sentry"
                dsn="${env:SENTRY_DSN}"
                minimumBreadcrumbLevel="DEBUG"
                minimumEventLevel="WARN"
        />
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="SysOut"/>
        </Root>
        <Logger name="net.dv8tion.jda" level="warn" additivity="false"/>

        <Logger name="com.computiotion.sfrp.bot.commands.Command" level="info" additivity="true" />
        <Logger name="com.computiotion.sfrp.bot.listeners.MessageListener" level="info" additivity="false" />

        <Logger name="com.computiotion.sfrp" level="trace" additivity="false">
            <AppenderRef ref="SysOut"/>
        </Logger>
    </Loggers>
</Configuration>
